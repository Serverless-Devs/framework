  <script>
  const port = <%- port %>;

  function request(options) {
      return axios({
          baseURL: `http://localhost:${port}`,
          ...options
      })
  }

  new Vue({
      el: '#app',
      data: function () {
          return {
              form: {},
              res: {}
          }
      },
      computed:{
          templateKeys(){
              return <%- templateKeys %>
          },
          formatTemplateKeys() {
            const allKeys = this.templateKeys;
            let normalKeys = [];
            let _keys = [];
            allKeys.forEach((item) => {
              const [start, end] = item.name.split('_');
              if (!end) {
                normalKeys.push(item);
              } else {
                _keys.push(start);
              }
            });
            _keys = Array.from(new Set(_keys));
            const classification = [];
            _keys.forEach((item) => {
              const opt = [];
              allKeys.forEach((obj) => {
                const [start, end] = obj.name.split('_');
                if (start === item) {
                  opt.push({ ...obj, label: end });
                }
              });
              if (opt.length > 1) {
                classification.push({ class: item, child: opt });
              } else {
                normalKeys = normalKeys.concat(opt);
              }
            });
            return { normalKeys, classification };
          },
          port(){
              return port
          },
           accessList(){
              return <%- accessList %>
          }
      },
      mounted(){
        this.templateKeys.forEach(item=>{
          this.$set(this.form, item.name, item.defaultValue)
        })
      },
      methods: {
        getLabel(item){
          return `${item.name}ï¼ˆ${item.desc}ï¼‰`
        },
        getChildLabel(item){
          return `${item.label}ï¼ˆ${item.desc}ï¼‰`
        },
        handleInit() {
          this.$refs.form.validate(async (valid) => {
            if (valid) {
              const sconfig = {};
              const envconfig = {};
              Object.keys(this.form).forEach((key) => {
                const findObj = this.templateKeys.find((item) => item.name === key);
                if (findObj.type === 's') {
                  sconfig[key] = this.form[key];
                }
                if (findObj.type === 'env') {
                  envconfig[key] = this.form[key];
                }
              });
              const { data } = await request({
                url: '/api',
                method: 'post',
                data: { sconfig, envconfig },
              });
              this.res = data;
              setTimeout(() => {
                data?.success && window.close();
              }, 3000);
            } else {
              console.log('error submit!!');
              return false;
            }
          });
        },
      },
    })
  </script>
